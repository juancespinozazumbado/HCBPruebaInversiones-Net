@model HCBPruebaInversiones.EntidadesODB.Request.InversioneConDetallesVM

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Inversion</h4>
    <form asp-controller="Inversiones" asp-action="Cargar" method="post">
        <div class="form-group">
            <input asp-for="Inversion.ID_INVERSION" type="hidden" />
        </div>
        <div class="form-group">
            <input type="submit" value="Generar" class="btn btn-primary" />
        </div>
    </form>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">Monto</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inversion.MONTO_INVERSION)
        </dd>
        <dt class="col-sm-2">Tasa</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inversion.TAS_INT_ANUAL)
        </dd>
        <dt class="col-sm-2">Plazo</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inversion.PLAZO_MESES)
        </dd>
        <dt class="col-sm-2">Cupones Anuales</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inversion.CUPONES_POR_AÑO)
        </dd>
    </dl>
</div>

<div>
    @if (Model.Encabezado != null && Model.Detalles.Count() != 0)
    {
        @Html.Partial("_Detalle", Model)
    }

    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/Inversiones/CalcularCupones.js"></script>



